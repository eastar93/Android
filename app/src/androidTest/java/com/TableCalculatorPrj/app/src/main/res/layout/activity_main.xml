<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TableRow>
        <EditText
            android:layout_width="match_parent"
            android:layout_span="5"
            android:id="@+id/Enum1"
            android:hint="값 입력."/>
    </TableRow>
    <TableRow>
        <EditText
            android:layout_width="match_parent"
            android:layout_span="5"
            android:id="@+id/Enum2"
            android:hint="값 입력."/>
    </TableRow>
    <TableRow>
        <Button
            android:text="0"
            android:backgroundTint="#3F51B5"
            android:id="@+id/Num0"
            android:layout_weight="1"/>
        <Button
            android:text="1"
            android:backgroundTint="#3F51B5"
            android:id="@+id/Num1"
            android:layout_weight="1"/>
        <Button
            android:text="2"
            android:backgroundTint="#3F51B5"
            android:id="@+id/Num2"
            android:layout_weight="1"/>
        <Button
            android:text="3"
            android:backgroundTint="#3F51B5"
            android:id="@+id/Num3"
            android:layout_weight="1"/>
        <Button
            android:text="4"
            android:backgroundTint="#3F51B5"
            android:id="@+id/Num4"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow>
        <Button
            android:text="5"
            android:backgroundTint="#3F51B5"
            android:id="@+id/Num5"
            android:layout_weight="1"/>
        <Button
            android:text="6"
            android:backgroundTint="#3F51B5"
            android:id="@+id/Num6"
            android:layout_weight="1"/>
        <Button
            android:text="7"
            android:backgroundTint="#3F51B5"
            android:id="@+id/Num7"
            android:layout_weight="1"/>
        <Button
            android:text="8"
            android:backgroundTint="#3F51B5"
            android:id="@+id/Num8"
            android:layout_weight="1"/>
        <Button
            android:text="9"
            android:backgroundTint="#3F51B5"
            android:id="@+id/Num9"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/SumBtn"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#3F51B5"
            android:text="+" />
        <Button
            android:id="@+id/SubBtn"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#3F51B5"
            android:text="-"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/MulBtn"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#3F51B5"
            android:text="*"/>
        <Button
            android:id="@+id/DivBtn"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#3F51B5"
            android:text="/"/>
    </TableRow>
    <TableRow>
            <Button
                android:id="@+id/ClearBtn"
                android:layout_width="match_parent"
                android:layout_span="5"
                android:backgroundTint="#3F51B5"
                android:text="C"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="결과 : "/>
        <TextView
            android:id="@+id/Result"
            android:text="계산 결과"/>
    </TableRow>

</TableLayout>