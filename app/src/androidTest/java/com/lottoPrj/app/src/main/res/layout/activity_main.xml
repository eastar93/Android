<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/RaffleNumInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="당첨번호 : "
        app:layout_constraintBaseline_toBaselineOf="@+id/RaffleNum"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/RaffleNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="추첨번호"
        app:layout_constraintStart_toStartOf="@+id/BonusNum"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BonusNumInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="보너스 번호 : "
        app:layout_constraintBaseline_toBaselineOf="@+id/BonusNum"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/BonusNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:text="보너스번호"
        app:layout_constraintStart_toEndOf="@+id/BonusNumInfo"
        app:layout_constraintTop_toBottomOf="@+id/RaffleNum" />

    <Button
        android:id="@+id/RafBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:text="추첨하기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BonusNumInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>