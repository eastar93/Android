<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/Animals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="13dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/AniImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/catBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="고양이"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/dogBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="강아지"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/desertfoxBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사막여우"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/squirrelBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다람쥐"
            android:visibility="invisible" />

    </RadioGroup>

    <TextView
        android:id="@+id/AppearApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="28dp"
        android:text="어플 보이기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/ApperS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="@+id/AppearApp"
        app:layout_constraintTop_toBottomOf="@+id/AppearApp" />

    <TextView
        android:id="@+id/ViewAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="보고싶은 동물"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/AniImg"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="83dp"
        android:src="@drawable/ic_launcher_foreground"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Animals" />


</androidx.constraintlayout.widget.ConstraintLayout>